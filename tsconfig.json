{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "$icons/*": ["./public/assets/svg/icons/*"],
      "$logo/*": ["./public/assets/svg/logo/*"]
    }
  },
  "include": [
    "../../shared-types/src/**/*.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
